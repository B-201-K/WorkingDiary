<Window x:Class="WorkingDiary.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkingDiary"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="GetInfoButton" Width="100" Height="30" Content="Выгрузка" Margin="50,300, 550, 70" Click="GetInfoButton_Click"></Button>
        <DataGrid x:Name="Db_DataGrid" Width="400" Height="430" Margin="390, 0, 0,0"></DataGrid>
        <Button x:Name="GetWorkerButton" Width="100" Height="30" Content="Выгрузка" Margin="20,50, 650, 330" Click="GetWorkerButton_Click"></Button>
        <Button x:Name="ClearBigIntButton" Width="120" Height="30" Content="Обнулить счётчик" Margin="50,250, 550, 120" Click="ClearBigIntButton_Click"></Button>
        <Button x:Name="DeleteBaseButton" Width="120" Height="30" Content="Удалить данные" Margin="50,350, 550, 25" Click="DeleteBaseButton_Click"></Button>
        <Label Name="WorkerLabel" Width="300" Height="30" Margin="150,50, 350, 330" Content="Test"></Label>
    </Grid>
</Window>
