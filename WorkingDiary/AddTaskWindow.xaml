<Window x:Class="WorkingDiary.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkingDiary"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="300" Width="420">
    <Grid>
        <Button Width="120" Height="20" Name="SaveButton" Content="Сохранить" Margin="0,180,0,10" Click="SaveButton_Click"></Button>
        <TextBox Width="200" Height="30" Name="TaskNameTextBox" Margin="5,25,190,170" BorderThickness="2" BorderBrush="Black" FontSize="20"></TextBox>
        <TextBox Width="200" Height="70" Name="TaskDescTextBox" Margin="0,60,190,50" BorderThickness="2" BorderBrush="Black" FontSize="20"></TextBox>

        <Label Width="150" Height="30" Margin="2,5,244,200">Название задачи</Label>
        <Label Width="150" Height="30" Margin="2,30,244,110">Описание задачи</Label>

    </Grid>
</Window>
